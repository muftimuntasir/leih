<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="blood_donar_view" model="ir.ui.view">
            <field name="name">Blood Donar</field>
            <field name="model">blood.donar</field>
            <field name="arch" type="xml">
            <form string="Room">
                <sheet>

                    <group>
                        <field name="date"/>
                        <field name="doner_name"/>
                        <field name="mobile_no"/>
                        <field name="description"/>
                        <field name="group"/>
                        <field name="cost"/>

                    </group>

                </sheet>
            </form>

            </field>

        </record>




        <record id="blood_donar_action" model="ir.actions.act_window">
            <field name="name">Blood Donar</field>
            <field name="res_model">blood.donar</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- expense type tree -->
        <record model="ir.ui.view" id="blood_donar_tree" >
            <field name="name">Blood Donar</field>
            <field name="model">blood.donar</field>
            <field name="arch" type="xml">
            <tree string="Alu List">
                        <field name="name"/>
                        <field name="doner_name"/>
                        <field name="mobile_no"/>
                        <field name="date"/>
                        <field name="description"/>
                        <field name="group"/>
                        <field name="cost"/>

            </tree>
            </field>
        </record>


        <menuitem name="Blood Bank" id="leih_blood_menu" parent="leih_menu" sequence="6"/>
        <menuitem name="Blood Donar" id="blood_donar_menu_mainform" parent="leih_blood_menu" action="blood_donar_action" groups="leih.group_blood_bank_menu_donor"/>

    </data>
</openerp>