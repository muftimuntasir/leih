<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="report_view" model="ir.ui.view">
            <field name="name">diagnosis.sticker.views</field>
            <field name="model">diagnosis.sticker</field>
            <field name="arch" type="xml">
             <form string="Investigation">
                <sheet>

                    <group>

                        <field name="name"/>
                        <field name="bill_register_id"/>
                        <field name="department_id"/>

                    </group>
                    <notebook>
                        <page string="Referance Value">
                            <field name="sticker_line_id" mode="tree">
                                <tree string="Select Referance Value" editable="top">
                                    <field name="test_name"/>
                                    <field name="ref_value"/>
                                    <field name="result"/>
                                    <field name="remarks"/>
                                </tree>
                            </field>
                        </page>

                    </notebook>

                </sheet>
            </form>

            </field>

        </record>




        <record id="report_action" model="ir.actions.act_window">
            <field name="name">Sticker</field>
            <field name="res_model">diagnosis.sticker</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- expense type tree -->
        <record model="ir.ui.view" id="report_tree" >
            <field name="name">leih</field>
            <field name="model">diagnosis.sticker</field>
            <field name="arch" type="xml">
             <tree string="Alu List">
                        <field name="name"/>
                        <field name="bill_register_id"/>
                        <field name="department_id"/>
                 <field name="sticker_line_id">
                        <field name="test_name"/>
                        <field name="ref_value"/>
                        <field name="result"/>
                        <field name="remarks"/>
                </field>



            </tree>
            </field>
        </record>




<!--        <menuitem name="Doctors" id="leih_doctors_menu" parent="leih_menu"/>-->
        <menuitem name="Report" id="report_print" parent="leih_group_menu" action="report_action"/>


    </data>
</openerp>