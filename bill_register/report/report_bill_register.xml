<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_bill_register">
            <t t-call="report.html_container">
<!--                <t t-call="report.external_layout">-->
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-3"></div>
                                <div class="col-xs-3"></div>
                                <div class="col-xs-1"></div>
                                <div class="col-xs-5">
                                    Date: <span t-esc="o.date"/>
                                </div>
                            </div>

                            <div class="oe_structure"/>

                            <div style="align:center">
                                <h5>
                                    Bill No: <span t-field="o.name"/>
                                </h5>
                            </div>

                            <div class="row">
                            <div class="col-md-6 pull-right">
                                <h3>
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px"/>
                                </h3>
                            </div>
                                </div>

                            <div class="row">
                                <div class="col-xs-4">
                                    <b>Patient ID:</b> <span t-field="o.patient_name.patient_id"/>
                                </div>

                                <div class="col-xs-5">
                                    <b>Name:</b> <span t-field="o.patient_name.name"/>

                                </div>
                                <div class="col-xs-2">
                                    <b>Age:</b> <span t-field="o.patient_name.age"/>
                                </div>

                                 </div>
                             <div class="row">

                                <div class="col-xs-5">
                                    <b>Address:</b><span t-field="o.patient_name.address"/>

                                </div>
                                 <div class="col-xs-3 text-left">
                                    <b>Sex:</b> <span t-field="o.patient_name.sex"/>
                                </div>
                                 <div class="col-xs-4 text-left">
                                    <b>Mobile:</b> <span t-field="o.mobile"/>

                                </div>
                                </div>
                                <div class="row">

                                <div class="col-xs-6">
                                    <b>Reffered By:</b><span t-field="o.ref_doctors"/>

                                </div>
                                </div>


                            <hr/>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>S.N.</th>
                                        <th>Item Name</th>
                                        <th>Amount</th>
                                        <th>Delivery Date</th>

                                    </tr>
                                </thead>
                                <tbody class="bill_register_tbody">
                                    <t t-set="i" t-value="1" />
                                    <t t-foreach="o.bill_register_line_id" t-as="z">
                                        <tr>
                                            <td>
                                                <span t-esc="i"/>
                                                <t t-set="i" t-value="i+1"/>
                                            </td>
                                            <td>
                                                <span t-field="z.name"/>

                                            </td>

                                            <td>
                                                <span t-field="z.price"/>

                                            </td>
                                            <td>
                                                <span t-field="z.delivery_date"/>

                                            </td>


                                        </tr>

                                    </t>

                                </tbody>

                            </table>
                            <div align="right" style="mergin-right:10px;">
                                    <strong>Sub Total:</strong>
                                    <span t-field="o.total_without_discount"/>
                                </div>
                                <div align="right">
                                    <strong>Referral  Discount(%):</strong>
                                    <span t-field="o.doctors_discounts"/>
                                </div>
                                <div align="right">
                                    <strong>Others  Discount:</strong>
                                    <span t-field="o.other_discount"/>
                                </div>

                                 <div align="right">
                                    <strong>Grand Total:</strong>
                                    <span t-field="o.grand_total"/>
                                </div>
                                 <div align="right">
                                    <strong>Paid Amount:</strong>
                                    <span t-field="o.paid"/>
                                </div>
                                 <div align="right">
                                    <strong>Due Amount:</strong>
                                    <span t-field="o.due"/>
                                </div>





                        </div>
                    </t>
                </t>
<!--            </t>-->
        </template>
    </data>
</openerp>
