<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_bill_register">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-3"></div>
                                <div class="col-xs-3"></div>
                                <div class="col-xs-3"></div>
                                <div class="col-xs-3">
                                    Date: <span t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/>
                                </div>
                            </div>

                            <div class="oe_structure"/>

                            <div style="align:center">
                                <h2>
                                    <span>Bill No # <span t-field="o.name"/></span>
                                </h2>
                            </div>

                            <div class="row">
                            <div class="col-md-6 pull-right">
                                <h1>
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px"/>
                                </h1>
                            </div>
                                </div>

                            <div class="row">
                                <div class="col-xs-4">
                                    <strong>Name:</strong>
                                    <p t-field="o.patient_name"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Reffered By:</strong>
                                    <p t-field="o.ref_doctors"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Total Amount:</strong>
                                    <p t-field="o.total"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Discount:</strong>
                                    <p t-field="o.discounts"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Grand Total:</strong>
                                    <p t-field="o.grand_total"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Paid Amount:</strong>
                                    <p t-field="o.paid"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Due:</strong>
                                    <p t-field="o.due"/>
                                </div>

                            </div>
                            <hr/>
                            <br/><br/>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>S.N.</th>
                                        <th>Test Name</th>
                                        <th>Amount</th>

                                    </tr>
                                </thead>
                                <tbody class="bill_register_tbody">
                                    <t t-set="i" t-value="1" />
                                    <t t-foreach="o.bill_register_line_id" t-as="z">
                                        <tr>
                                            <td>
                                                <span t-esc="i"/>
                                                <t t-set="i" t-value="i+1"/>
                                            </td>
                                            <td>
                                                <span t-field="z.name"/>

                                            </td>

                                            <td>
                                                <span t-field="z.total_amount"/>

                                            </td>



                                        </tr>

                                    </t>

                                </tbody>

                            </table>


                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
