<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!--proforma_invoice form-->
        <record model="ir.ui.view" id="money_receipt_form_view" >
			<field name="name">Money receipt Information</field>
			<field name="model">leih.money.receipt</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="PI">
                    <sheet>

                        <group string="Bill Info">

                                <field name="name"/>
                                <field name="date"/>
                                <field name="bill_id"/>
                                <field name="admission_id"/>
                                <field name="amount"/>
                                <field name="type"/>
                                <field name="user_id"/>
                                <field name="state"/>
                        </group>

                        <!--Tab information-->
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="mr_graph_view">
                <field name="name">MR Graph</field>
                <field name="model">leih.money.receipt</field>
                <field name="arch" type="xml">
                    <graph string="">
                        <field name="type"/>

                    </graph>
                </field>
        </record>



        <!--proforma_invoice starting action-->
        <record model="ir.actions.act_window" id="money_receipt_new_action" >
			<field name="name">Money receipt</field>
			<field name="res_model">leih.money.receipt</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,graph</field>
			<field name="context" eval="{'search_default_my_courses': 1}"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Click to create a new Payment.
				</p>
			</field>
		</record>



        <!--Proforma Invoice record list tree-->
        <record model="ir.ui.view" id="money_receipt_tree_view" >
            <field name="name">leih.money_receipt</field>
            <field name="model">leih.money.receipt</field>
            <field name="arch" type="xml">
                <tree string="Admission List" default_order='id desc'>

                                <field name="name"/>
                                <field name="bill_id"/>
                                <field name="admission_id"/>
                                <field name="amount"/>
                                <field name="type"/>
                                <field name="user_id"/>
                                <field name="state"/>
                </tree>
            </field>
        </record>

        <menuitem id="mr_menu" name="Money Receipt" parent="leih_billing_menu" action="money_receipt_new_action" groups="leih.group_billing_menu_money_receipt"/>

    </data>
</openerp>