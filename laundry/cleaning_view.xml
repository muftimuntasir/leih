<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="cleaning_view" model="ir.ui.view">
            <field name="name">laundry.clean</field>
            <field name="model">laundry.clean</field>
            <field name="arch" type="xml">
            <form string="Clean">
                <sheet>

                    <group>

                        <field name="name"/>
                        <field name="color"/>
                        <field name="quantity"/>
                        <field name="send_date"/>
                        <field name="laundry_name"/>
                        <field name="back_date"/>

                    </group>

                </sheet>
            </form>

            </field>

        </record>




        <record id="cleaning_action" model="ir.actions.act_window">
            <field name="name">laundry.clean</field>
            <field name="res_model">laundry.clean</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- expense type tree -->
        <record model="ir.ui.view" id="clean_tree" >
            <field name="name">laundry.clean.tree</field>
            <field name="model">laundry.clean</field>
            <field name="arch" type="xml">
            <tree string="Alu List">
                        <field name="name"/>
                        <field name="color"/>
                        <field name="quantity"/>
                        <field name="send_date"/>
                        <field name="laundry_name"/>
                        <field name="back_date"/>


            </tree>
            </field>
        </record>


<!--        <menuitem name="Doctors" id="leih_doctors_menu" parent="leih_menu"/>-->
<!--        <menuitem name="Laundry - Linen" id="leih_laundry_menu" parent="leih_menu"/>-->
        <menuitem name="Send to Laundry" id="clean_menu_mainform" parent="leih_laundry_menu" action="cleaning_action"/>


    </data>
</openerp>