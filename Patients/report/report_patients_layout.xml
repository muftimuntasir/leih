<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_patients_layout">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-3"></div>
                                <div class="col-xs-3"></div>
                                <div class="col-xs-3"></div>
                                <div class="col-xs-3">
                                    Date:
                                    <span t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/>
                                </div>
                            </div>

                            <div class="oe_structure"/>

                            <div class="row">
                                <div class="col-xs-4">
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>

                                    <span>Name #
                                        <span t-field="o.name"/>
                                    </span>
                                    <br/>
                                    <span>Mobile No #
                                        <span t-field="o.mobile"/>
                                    </span>
                                    <br/>

                                </div>

                                <div class="col-xs-4">
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>

                                    <span>Patient Id #
                                        <span t-field="o.patient_id"/>
                                    </span>
                                    <br/>
                                    <span>Age #
                                        <span t-field="o.age"/>
                                    </span>
                                    <br/>
                                </div>

                                <div class="col-xs-4">
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>

                                    <span>Address #
                                        <span t-field="o.address"/>
                                    </span>
                                    <br/>
                                    <span>Sex #
                                        <span t-field="o.sex"/>
                                    </span>
                                    <br/>
                                </div>
                            </div>

                            <hr/>
                            <br/>
                            <br/>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Mobile</th>
                                        <th>Patient Name</th>
                                        <th>Address</th>
                                        <th>Age</th>
                                        <th>Sex</th>
                                        <th>Delivery Date</th>
                                        <th>Total</th>
                                        <th>Discount(%)</th>
                                        <th>Flat Discount</th>
                                        <th>Grand Total</th>
                                        <th>Paid</th>
                                        <th>Due</th>

                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="i" t-value="1" />
                                    <t t-foreach="o.bills" t-as="z">
                                        <tr>
                                            <td>
                                                <span t-esc="i"/>
                                                <t t-set="i" t-value="i+1"/>
                                            </td>
                                            <td>
                                                <span t-field="z.name"/>

                                            </td>

                                            <td>
                                                <span t-field="z.mobile"/>

                                            </td>
                                            <td>
                                                <span t-field="z.patient_name"/>

                                            </td>
                                            <td>
                                                <span t-field="z.address"/>

                                            </td>
                                            <td>
                                                <span t-field="z.age"/>

                                            </td>
                                            <td>
                                                <span t-field="z.sex"/>

                                            </td>
                                            <td>
                                                <span t-field="z.delivery_date"/>

                                            </td>
                                            <td>
                                                <span t-field="z.total"/>

                                            </td>
                                            <td>
                                                <span t-field="z.discounts"/>

                                            </td>
                                            <td>
                                                <span t-field="z.flat_discount"/>

                                            </td>
                                            <td>
                                                <span t-field="z.grand_total"/>

                                            </td>
                                            <td>
                                                <span t-field="z.paid"/>

                                            </td>
                                            <td>
                                                <span t-field="z.due"/>

                                            </td>

                                        </tr>

                                    </t>

                                </tbody>

                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>