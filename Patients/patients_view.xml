<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="patients_view" model="ir.ui.view">
            <field name="name">patient.info.view</field>
            <field name="model">patient.info</field>
            <field name="arch" type="xml">
            <form string="Patients">
                <sheet>

                    <group>
                        <field name="patient_id"/>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="sex"/>
                         <field name="mobile"/>
                        <field name="address"/>
<!--                        <field name="is_patient"/>-->
                        <field name="state"/>
                    </group>
                    <notebook attrs ="{'invisible':[('state','!=', 'created')]}">
                        <page string="Tests">
                            <field name="bills">
                                <tree string="tests history">
                                    <field name="mobile"/>
                                    <field name="sex"/>
                                </tree>
                            </field>

                        </page>

                        <page string="Bill">
                            <field name="bills">
                                <tree string="tests history">
                                    <field name="age"/>
                                    <field name="sex"/>
                                </tree>
                            </field>

                        </page>

                    </notebook>

                </sheet>
            </form>

            </field>

        </record>




        <record id="patients_action" model="ir.actions.act_window">
            <field name="name">Patient info</field>
            <field name="res_model">patient.info</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- expense type tree -->
        <record model="ir.ui.view" id="patients_tree" >
            <field name="name">patient.info.tree</field>
            <field name="model">patient.info</field>
            <field name="arch" type="xml">
            <tree string="Alu List">
                        <field name="patient_id"/>
                        <field name="name"/>
                        <field name="age"/>
                          <field name="sex"/>
                        <field name="mobile"/>
                        <field name="address"/>




            </tree>
            </field>
        </record>


<!--        <menuitem name="Patients" id="leih_patients_menu" parent="leih_menu"/>-->
        <menuitem name="Patients" id="patients_menu_mainform" parent="leih_profile_menu" action="patients_action"/>


    </data>
</openerp>