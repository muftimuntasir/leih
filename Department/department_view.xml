<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="dep_view" model="ir.ui.view">
            <field name="name">leih.views</field>
            <field name="model">leih.department</field>
            <field name="arch" type="xml">
            <form string="Room">
                <sheet>

                    <group>

                        <field name="department_name"/>
                        <field name="parent"/>

                    </group>

                </sheet>
            </form>

            </field>

        </record>




        <record id="dep_action" model="ir.actions.act_window">
            <field name="name">dep.form</field>
            <field name="res_model">leih.department</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- expense type tree -->
        <record model="ir.ui.view" id="dep_tree" >
            <field name="name">leih</field>
            <field name="model">leih.department</field>
            <field name="arch" type="xml">
            <tree string="Alu List">
                        <field name="department_name"/>
                        <field name="parent"/>


            </tree>
            </field>
        </record>


<!--        <menuitem name="Department" id="leih_dep_menu" parent="leih_menu"/>-->
        <menuitem name="Department" id="dep_menu_mainform" parent="leih_group_menu" action="dep_action"/>


    </data>
</openerp>