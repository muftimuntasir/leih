<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="expense_view" model="ir.ui.view">
            <field name="name">leih.expense</field>
            <field name="model">leih.expense</field>
            <field name="arch" type="xml">
            <form string="Linen Entry Form">

                                <header>
                                    <button name="approve_expense" string="Approve" type="object" />
                                    <button name="cancel_expense" string="Cancel" type="object" />
</header>
                <sheet>

                    <group>

                        <field name="expense_type"/>
                        <field name="ex_name"/>
                        <field name="amount"/>
                        <field name="responsible_person"/>
                        <field name="date"/>
                        <field name="description"/>

                    </group>

                </sheet>
            </form>

            </field>

        </record>




        <record id="expense_action" model="ir.actions.act_window">
            <field name="name">leih.expense</field>
            <field name="res_model">leih.expense</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- expense type tree -->
        <record model="ir.ui.view" id="expense_tree" >
            <field name="name">leih.expense.tree</field>
            <field name="model">leih.expense</field>
            <field name="arch" type="xml">
            <tree string="Alu List">
                        <field name="expense_type"/>
                        <field name="ex_name"/>
                        <field name="amount"/>
                        <field name="responsible_person"/>
                        <field name="date"/>
                        <field name="description"/>
                        <field name="state"/>

            </tree>
            </field>
        </record>


<!--        <menuitem name="Doctors" id="leih_doctors_menu" parent="leih_menu"/>-->
          <menuitem name="Expense" id="leih_expense_menu" parent="leih_menu"/>
        <menuitem name="Expense" id="expense_menu_mainform" parent="leih_expense_menu" action="expense_action" groups="leih.group_expense_menu_expense"/>


    </data>
</openerp>