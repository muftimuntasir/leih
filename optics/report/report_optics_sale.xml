<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_optics_sale">
            <t t-call="report.html_container">
<!--                <t t-call="report.external_layout">-->
                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="font-size: 16px !important;">
                            <div class="row form-group" style="margin-top:20px;">
                                <div class="col-xs-1">
                                </div>
                                 <div class="col-xs-4">
                                        <span style="margin-left:40px;" t-field="o.patient_id"/>
                                 </div>

                                <div class="col-xs-3">
                                        <span style="margin-left:0px;" t-field="o.name"/>
                                </div>
                                <div class="col-xs-1">

                                </div>
                                <div class="col-xs-3 text-center">
                                        <span t-field="o.date"/>
                                </div>
                            </div>
                            <div class="row">

                            </div>


                                  <div class="row form-group">

                 <div class="col-xs-3 text-left">

                                </div>
                                    <div class="col-xs-7">
                                        <span style="margin-left:100px;" t-esc="o.patient_name.name"/>
                                    </div>


                                <div class="col-xs-2 text-center">


                                </div>

                                </div>

                                    <div class="row form-group">
                                    <div class="col-xs-offset-2 col-xs-6">
                                        Address: <span t-esc="o.address"/>
                                    </div>

                                    <div class="col-xs-4">
                                        Contact: <span t-esc="o.mobile"/>
                                    </div>
                                </div>
                            <div style="margin-left:70px;">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                         <th>Item Name</th>
                                        <th>Qty</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="o.frame_id">

                                    <tr>
                                            <td>
                                                Frame: <span t-field="o.frame_id"/>
                                            </td>

                                            <td>
                                                 <span t-field="o.quantity"/>
                                            </td>
                                            <td>
                                                <span t-field="o.price"/>
                                            </td>
                                        </tr>
                                    </t>
                        <t t-foreach="o.optics_lens_sale_line_id" t-as="z">
                                    <tr>
                                            <td>

                                                Lens: <span t-field="z.name"/>


                                            </td>

                                            <td>
                                                 <span t-field="z.qty"/>
                                            </td>
                                            <td>
                                                <span t-field="z.total_amount"/>
                                            </td>

                                        </tr>
                        </t>

                                </tbody>
                            </table>
                                </div>

<div class="row">
    <div class="col-xs-offset-2 col-xs-10">
        <strong>Total:</strong> <span t-field="o.total"/>
    </div>
</div>
<div class="row">
    <div class="col-xs-offset-2 col-xs-10">
        <strong>Paid:</strong> <span t-field="o.paid"/>
    </div>
</div>
<div class="row">
    <div class="col-xs-offset-2 col-xs-10">
        <strong>Due:</strong> <span t-field="o.due"/>
    </div>
</div>


                        </div>
                    </t>
                </t>
<!--            </t>-->
        </template>
    </data>
</openerp>
