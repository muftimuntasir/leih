<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="leih_emergency_graph_view">
                <field name="name">Emergency Patient</field>
                <field name="model">hospital.admission</field>
                <field name="arch" type="xml">
                    <graph string="">
                        <field name="patient_name"/>
                    </graph>
                </field>
        </record>

        <record id="emergency_patient_action" model="ir.actions.act_window">
            <field name="name">Emergency Patient</field>
            <field name="res_model">hospital.admission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="domain">[('state','=','pending'),('emergency','=',True)]</field>
            <field name="context">{}</field>
        </record>



        <!-- expense type tree -->
        <record model="ir.ui.view" id="emergency_activated_tree" >
            <field name="name">leih</field>
            <field name="model">hospital.admission</field>
            <field name="arch" type="xml">
            <tree string="Alu List">

                <field name="name"/>
                <field name="patient_name"/>
                        <field name="mobile"/>
                <!--                        <field name="patient_id"/>-->

                        <field name="grand_total"/>
                        <field name="paid"/>
                        <field name="due"/>
                <field name="state"/>


            </tree>
            </field>
        </record>


<!--        <menuitem name="Doctors" id="leih_doctors_menu" parent="leih_menu"/>-->
         <menuitem name="Hospital Emergency" id="hospital_leih_emergency_menu" parent="leih_menu" sequence="3"/>
        <menuitem name="Hospital Pending Emergency" id="hospital_emergency_menu_mainform" parent="hospital_leih_emergency_menu" action="emergency_patient_action" groups="leih.group_emergency_menu_pending"/>


    </data>
</openerp>