<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="opd_ticket_report">
            <t t-call="report.html_container">
<!--                <t t-call="report.external_layout">-->
                    <t t-foreach="docs" t-as="o">
<!--                        <t t-if="o.patient_id">-->
                        <div class="page">


                            <div class="row form-group" style="padding: 5px;">
                                 <div class="col-xs-3">
                                        <span t-field="o.patient_id"/>
                                 </div>

                                <div class="col-xs-3">
                                        <span t-field="o.name"/>
                                </div>
                                <div class="col-xs-2">

                                </div>


                                <div class="col-xs-4" style="mergin-left:20px" >
                                        <span t-field="o.date"/>
                                </div>
                            </div>
                            <div class="row">

                            </div>


                                  <div class="row form-group" style="padding: 5px;">


                                    <div class="col-xs-4" style="mergin-top:30px">
                                        <span t-esc="o.patient_name.name"/>
                                    </div>

                                    <div class="col-xs-3">

                                          <span t-esc="o.age"/>

                                </div>
                                <div class="col-xs-3">

                                          <span t-esc="o.sex"/>
                                </div>

                                </div>
                                <div class="row">

                                </div>

                                    <div class="row form-group" style="padding: 5px;">
                                    <div class="col-xs-10">
                                        <span t-esc="o.address"/>
                                    </div>
                                    <div class="col-xs-2">
                                        <span t-esc="o.total"/>
                                    </div>
                                </div>
                             <div class="row">

                                </div>

                                <div class="row">
                                    <div class="col-xs-10">
                                        <span t-esc="o.opd_ticket_line_id.name.name"/>
                                    </div>
                                </div>



                            </div>


                    </t>
<!--                </t>-->
            </t>
        </template>
    </data>
</openerp>