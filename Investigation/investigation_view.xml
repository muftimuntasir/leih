<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="investigation_view" model="ir.ui.view">
            <field name="name">leih.views</field>
            <field name="model">leih.investigation</field>
            <field name="arch" type="xml">
            <form string="Investigation">
                <sheet>

                    <group>

                        <field name="patient_id"/>
                        <field name="mobile"/>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="age"/>
                        <field name="sex"/>
                        <field name="ref_doctors"/>
                        <field name="delivery_date"/>

                    </group>
                    <notebook>
                        <page string="Referance Value">
                            <field name="entrr_test_information" mode="tree">
                                <tree string="Select Referance Value" editable="top">

                                    <field name="name" on_change="onchange_test(name, context)"/>
                                    <field name="price"/>
                                    <field name="discount"/>
                                    <field name="total_amount"/>

                                </tree>
                            </field>
                        </page>

                    </notebook>




                </sheet>
            </form>

            </field>

        </record>


 <record id="investigation_view_footer" model="ir.ui.view">
            <field name="name">leih.view</field>
            <field name="model">leih.footer</field>
            <field name="arch" type="xml">
            <form string="footer">
                <sheet>
                    <group>


                                    <field name="relation"/>
                                    <field name="total"/>
                                    <field name="discount"/>
                                    <field name="flat_discount"/>
                                    <field name="grand_total"/>
                                    <field name="paid"/>
                                    <field name="due"/>
                    </group>



                </sheet>
            </form>

            </field>

        </record>


        <record id="investigation_action" model="ir.actions.act_window">
            <field name="name">investigation.form</field>
            <field name="res_model">leih.investigation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- expense type tree -->
        <record model="ir.ui.view" id="investigation_tree" >
            <field name="name">leih</field>
            <field name="model">leih.investigation</field>
            <field name="arch" type="xml">
            <tree string="Alu List">
                        <field name="patient_id"/>
                        <field name="mobile"/>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="sex"/>
                        <field name="delivery_date"/>


            </tree>
            </field>
        </record>


<!--        <menuitem name="Doctors" id="leih_doctors_menu" parent="leih_menu"/>-->
        <menuitem name="Information" id="investigation_menu_mainform" parent="leih_group_menu" action="investigation_action"/>


    </data>
</openerp>